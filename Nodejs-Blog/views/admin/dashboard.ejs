<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post">+ add new</a>
</div>

<ul class="admin-posts">
    <% data.forEach(post => { %>
     <li>
        <a href="/post/<%= post._id %>">
        <%= post.title %> &nearr;
        </a>
        <div class="admin-posts-controls">
            <a href="/edit-post/<%= post._id %>" class="butt">Edit</a>
            <form action="/delete-post/<%= data._id %>?_method=DELETE " method="post">
            <input type="submit" value="Delete" class="butt">
            </form>
        </div>
     </li>
    <% }) %>
</ul>
<% if (nextPage !== null) { %>
   
    <a href="/?page=<%=  nextPage  %>" class="pagination">&lt; View Older Posts</a>
    <% } %> 